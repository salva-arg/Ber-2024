<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visualizador de Moléculas con JSmol</title>
    <script type="text/javascript" src="JSmol/JSmol.min.js"></script>
</head>
<body>
    <h1>Visualizador de Molécula con JSmol</h1>

    <!-- Contenedor del visualizador JSmol -->
    <div id="jsmolViewer" style="width: 400px; height: 400px; border: 1px solid black;"></div>

    <!-- Configuración y carga del visualizador JSmol -->
    <script type="text/javascript">
        var Info = {
            width: 400,
            height: 400,
            debug: false,
            color: "#FFFFFF",
            addSelectionOptions: false,
            use: "HTML5",
            j2sPath: "JSmol/j2s", // Ruta a la carpeta j2s dentro de JSmol
            script: "load c2_2.pdb; wireframe off; spacefill 20%;",
            disableInitialConsole: true
        };
        Jmol.getApplet("jsmolViewer", Info);
    </script>
</body>
</html>
